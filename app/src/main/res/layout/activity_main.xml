<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/text_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_subtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitulo" />

    <TextView
        android:id="@+id/textNombresCompletos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_nombres_completos"
        app:layout_constraintStart_toStartOf="@+id/textSubtitulo"
        app:layout_constraintTop_toBottomOf="@+id/textSubtitulo" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/textNombresCompletos"
        app:layout_constraintTop_toBottomOf="@+id/textNombresCompletos" />

    <TextView
        android:id="@+id/textCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_correo"
        app:layout_constraintStart_toStartOf="@+id/textNombresCompletos"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="9"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/textCorreo"
        app:layout_constraintTop_toBottomOf="@+id/textCorreo" />

    <TextView
        android:id="@+id/textClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_clave"
        app:layout_constraintBottom_toBottomOf="@+id/textCorreo"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberPassword"
        app:layout_constraintTop_toTopOf="@+id/textCorreo" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ems="6"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/editTextTextEmailAddress"
        app:layout_constraintTop_toTopOf="@+id/editTextTextEmailAddress" />

    <TextView
        android:id="@+id/textTelefono"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_telefono"
        app:layout_constraintStart_toStartOf="@+id/textCorreo"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textTelefono"
        app:layout_constraintTop_toBottomOf="@+id/textTelefono" />

    <TextView
        android:id="@+id/textFechanacimiento"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/text_fecha_nacimiento"
        app:layout_constraintBottom_toBottomOf="@+id/textTelefono"
        app:layout_constraintStart_toStartOf="@+id/editTextDate"
        app:layout_constraintTop_toTopOf="@+id/textTelefono" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ems="4"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNumber"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toTopOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textHoraNacimiento"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/text_hora_nacimiento"
        app:layout_constraintBottom_toBottomOf="@+id/textFechanacimiento"
        app:layout_constraintStart_toStartOf="@+id/editTextTime"
        app:layout_constraintTop_toTopOf="@+id/textFechanacimiento" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ems="3"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDate"
        app:layout_constraintStart_toEndOf="@+id/editTextDate"
        app:layout_constraintTop_toTopOf="@+id/editTextDate" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textZonaResidencia"
        app:layout_constraintStart_toEndOf="@+id/textZonaResidencia"
        app:layout_constraintTop_toTopOf="@+id/textZonaResidencia">

        <RadioButton
            android:id="@+id/radioButtonUrbano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_Urbano" />

        <RadioButton
            android:id="@+id/radioButtonRural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_Rural" />
    </RadioGroup>

    <TextView
        android:id="@+id/textZonaResidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/text_zona_residencia"
        app:layout_constraintStart_toStartOf="@+id/textTelefono"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <TextView
        android:id="@+id/textPersonasVivienda"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_personas_vivienda"
        app:layout_constraintStart_toStartOf="@+id/textZonaResidencia"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textIngresoFamilia"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/text_ingreso_familia"
        app:layout_constraintBottom_toBottomOf="@+id/textPersonasVivienda"
        app:layout_constraintStart_toEndOf="@+id/textPersonasVivienda"
        app:layout_constraintTop_toTopOf="@+id/textPersonasVivienda" />

    <TextView
        android:id="@+id/textOpinionbonos"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/text_opinion_bonos"
        app:layout_constraintBottom_toBottomOf="@+id/textIngresoFamilia"
        app:layout_constraintStart_toEndOf="@+id/textIngresoFamilia"
        app:layout_constraintTop_toTopOf="@+id/textIngresoFamilia" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="4"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textPersonasVivienda"
        app:layout_constraintTop_toBottomOf="@+id/textPersonasVivienda" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="4"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textPersonasVivienda"
        app:layout_constraintTop_toBottomOf="@+id/textIngresoFamilia" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="4"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toEndOf="@+id/textIngresoFamilia"
        app:layout_constraintTop_toBottomOf="@+id/textOpinionbonos" />

    <TextView
        android:id="@+id/textMascotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_mascotas"
        app:layout_constraintStart_toStartOf="@+id/textPersonasVivienda"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <CheckBox
        android:id="@+id/chackBoxGato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/checkbox_gato"
        app:layout_constraintStart_toStartOf="@+id/textMascotas"
        app:layout_constraintTop_toBottomOf="@+id/textMascotas" />

    <CheckBox
        android:id="@+id/checkBoxPerro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/checkbox_perro"
        app:layout_constraintBottom_toBottomOf="@+id/chackBoxGato"
        app:layout_constraintStart_toEndOf="@+id/chackBoxGato"
        app:layout_constraintTop_toTopOf="@+id/chackBoxGato" />

    <CheckBox
        android:id="@+id/checkBoxPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/checkbox_pollo"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxPerro"
        app:layout_constraintStart_toEndOf="@+id/checkBoxPerro"
        app:layout_constraintTop_toTopOf="@+id/checkBoxPerro" />

    <CheckBox
        android:id="@+id/checkBoxPato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/checkbox_pato"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxPollo"
        app:layout_constraintStart_toEndOf="@+id/checkBoxPollo"
        app:layout_constraintTop_toTopOf="@+id/checkBoxPollo" />

    <CheckBox
        android:id="@+id/checkBoxOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/checkbox_otro"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxPato"
        app:layout_constraintStart_toEndOf="@+id/checkBoxPato"
        app:layout_constraintTop_toTopOf="@+id/checkBoxPato" />

    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_send_24"
        android:text="@string/button_enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxPollo" />

</androidx.constraintlayout.widget.ConstraintLayout>